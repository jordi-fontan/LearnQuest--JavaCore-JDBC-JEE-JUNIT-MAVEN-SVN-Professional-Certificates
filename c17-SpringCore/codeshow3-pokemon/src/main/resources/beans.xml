<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans spring-beans-4.0.xsd
    http://www.springframework.org/schema/context spring-context-4.0.xsd">
 
 <bean id="driver" class="com.fontan.spring.pokemon.Driver">
 	<constructor-arg name="vehicle" ref="svehicle"></constructor-arg>
 	
 </bean>
  <bean id="svehicle" class="com.fontan.spring.pokemon.SimpleVehicle">
  
 	<property name="petrolTank"  value="2"></property> 
 </bean>
</beans>